{% extends 'base.html.twig' %}

{% block title %}AppliPAP's - Messagerie{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/admin/comm/contact/index.js') }}"></script>
{% endblock %}


{% block navbar%}
    {{ parent() }}
{% endblock %}

{% block content %}
<div class="container mx-auto mt-16">
    <div class="flex flex-col w-full px-2 mb-2">
        <div class="flex flex-row items-center w-full">
            <h1 class="uppercase font-bold text-xl text-emerald-900 w-full">Vos messages</h1>
        </div>
        <div class="flex flex-col w-full mb-2 shadow-sm">
            {% for contact in contacts %}
                <div class="bg-white columns-2 w-full divide-x rounded-sm p-2">
                    test
                </div>
            {% else %}
                <div class="bg-white columns-2 w-full divide-x rounded-sm p-2">
                    pas de messages.
                </div>
            {% endfor %}
        </div>
    </div>



</div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}