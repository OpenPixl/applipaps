{{ form_start(form) }}
    <div class="flex flex-col justify-center w-full px-2 mb-4">
        <div class="flex flex-col">
            {{ form_label(form.content, null, {'label_attr': {'class': 'hidden text-sm font-medium text-gray-700', 'for': form.content.vars.label}}) }}
            {{ form_widget(form.content, {'attr': {'class': 'block w-full text-sm px-2 py-1 border text-gray-700 focus:outline-none focus:ring focus:ring-blue-200', 'placeholder' : 'Votre message ...', 'rows': 8}}) }}
        </div>
    </div>
    {{ form_rest(form) }}
{{ form_end(form) }}