{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block navbar %}{% endblock %}

{% block content %}
    <div class="h-screen flex flex-col items-center justify-center ">
        <!-- Section du logo et du titre -->
        <div class="w-full max-w-xs text-center mb-6">
            <img src="{{ asset('images/png/LogoPAPSimmo.png') }}" alt="Logo PAPS Immo" class="mx-auto w-100 h-100">
        </div>

        <!-- Bloc de connexion -->
        <div class="w-full max-w-xs bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-bold text-gray-800 text-center mb-4">Connexion</h2>

            {% if error %}
                <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="space-y-4">
                <div>
                    <label for="username" class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
                    <input
                            type="text"
                            id="username"
                            name="_username"
                            value="{{ last_username }}"
                            required
                            autofocus
                            class="w-full text-sm mt-1 px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring focus:ring-blue-200"
                    >
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                    <input
                            type="password"
                            id="password"
                            name="_password"
                            required
                            class="w-full text-sm mt-1 px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring focus:ring-blue-200"
                    >
                </div>

                <div class="flex flex-col space-y-2 text-sm text-gray-600">
                    <label class="flex items-center">
                        <input type="checkbox" name="_remember_me" class="h-4 w-4 text-blue-600 focus:ring focus:ring-blue-200">
                        <span class="ml-2">Se souvenir de moi</span>
                    </label>
                    <a href="{{ path('app_forgot_password_request') }}" class="text-blue-600 hover:underline">Mot de passe oublié ?</a>
                </div>

                <button
                        type="submit"
                        class="w-full bg-blue-600 text-white py-1.5 px-3 text-sm rounded-md hover:bg-blue-700 active:bg-blue-800 active:shadow-lg focus:outline-none focus:ring focus:ring-blue-300"
                >
                    Connexion
                </button>
            </form>

            <!-- Bouton pour créer un compte -->
            <div class="mt-3">
                <a
                        href="{{ path('paps_security_register_prescriber') }}"
                        class="block w-full text-center bg-gray-800 text-white py-1.5 px-3 text-sm rounded-md hover:bg-black active:bg-gray-900 active:shadow-lg focus:outline-none focus:ring focus:ring-gray-500"            >
                    Créer un compte
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}