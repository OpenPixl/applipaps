{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block navbar %}
{% endblock %}

{% block content %}
    <div class="h-screen flex flex-col items-center justify-center ">
        <!-- Section du logo et du titre -->
        <div class="w-full max-w-xs text-center mb-6">
            <img src="{{ asset('images/png/LogoPAPSimmo.png') }}" alt="Logo PAPS Immo" class="mx-auto w-100 h-100">
        </div>
        <div class="w-full max-w-xs bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-xl font-bold text-gray-800 text-center mb-4">Réinitialiser votre mot de passe</h1>

            {#  {% if error %}
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4 text-sm">
                {{ error|e }}
            </div>
        {% endif %}


        {% if success %}
            <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-4 text-sm">
                {{ success }}
            </div>
        {% endif %}
            #}

            <form action="{{ path('app_forgot_password_request') }}" method="post" class="space-y-4">
                <div>
                    <label for="email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                    <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            placeholder="Votre e-mail"
                            class="w-full mt-1 px-3 py-2 border rounded-lg text-gray-700 focus:outline-none focus:ring focus:ring-blue-200"
                    >
                </div>

                <button
                        type="submit"
                        class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300"
                >
                    Envoyer le lien de réinitialisation
                </button>
            </form>

            <div class="text-center mt-4">
                <a href="{{ path('app_login') }}" class="text-sm text-blue-600 hover:underline">Retour à la connexion</a>
            </div>
        </div>
    </div>
{% endblock %}
