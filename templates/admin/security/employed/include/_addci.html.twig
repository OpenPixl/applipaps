{% if employed.ciFileName is not null %}
    <div class="border-[1px] border-dashed border-emerald-700  rounded-lg text-xs flex flex-row justify-between px-2 py-1 my-1">
        <div class="text-gray-600 text-xs">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10.125 2.25h-4.5c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125v-9M10.125 2.25h.375a9 9 0 0 1 9 9v.375M10.125 2.25A3.375 3.375 0 0 1 13.5 5.625v1.5c0 .621.504 1.125 1.125 1.125h1.5a3.375 3.375 0 0 1 3.375 3.375M9 15l2.25 2.25L15 12" />
            </svg>
        </div>
        <div class="flex items-center">
            <p>{{ employed.ciFileName }}</p>
        </div>
        <div class="text-gray-600 text-xs">
            <a href="{{ path('paps_admin_security_employed_removeci', {'id': employed.id}) }}" class="openModalWarning">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
            </a>
        </div>
    </div>
    <div class="hidden">
        <label for="{{ form.ciFile.vars.id }}"
               class="block my-1">
            Cliquez pour choisir un fichier
        </label>
        {{ form_widget(form.ciFile, {'attr': {'class': 'w-full text-xs bg-gray-50 text-slate-900 border-solid border-[1px] rounded file:mr-4 file:py-1 file:px-2 file:rounded-s file:border-0 file:text-xs file:font-semibold file:bg-gray-50 file:text-gray-800 hover:file:bg-gray-100 active:file:bg-gray-100"'}}) }}
    </div>
{% else %}
    <div class="my-1">
        <label for="{{ form.ciFile.vars.id }}"
               class="block my-1 hidden">
            Cliquez pour choisir un fichier
        </label>
        {{ form_widget(form.ciFile, {'attr': {'class': 'w-full text-xs bg-gray-50 text-slate-900 border-solid border-[1px] border-emerald-700 rounded file:mr-4 file:py-1 file:px-2 file:rounded-s file:border-0 file:text-xs file:font-semibold file:bg-gray-50 file:text-gray-800 hover:file:bg-gray-100 active:file:bg-gray-100"'}}) }}
    </div>
{% endif %}